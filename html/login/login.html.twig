<div class="container">
    <div id="loginbox"
         style="margin-top: 50px;"
         class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Einloggen</div>
                <div
                        style="float: right; font-size: 80%; position: relative; top: -10px">
                    <a href="#">Passwort vergessen?</a>
                </div>
            </div>

            <div style="padding-top: 30px"
                 class="panel-body">

                <div id="login-alert"
                     class="alert alert-danger col-sm-12 hide"></div>

                <div style="margin-bottom: 25px"
                     class="input-group">
                        <span class="input-group-addon"><i
                                    class="glyphicon glyphicon-user"></i></span> <input
                            id="login-username"
                            type="text"
                            class="form-control"
                            name="username"
                            value=""
                            placeholder="Benutzername oder E-Mail">
                </div>

                <div style="margin-bottom: 25px"
                     class="input-group">
                        <span class="input-group-addon"><i
                                    class="glyphicon glyphicon-lock"></i></span> <input
                            id="login-password"
                            type="password"
                            class="form-control"
                            name="password"
                            placeholder="Passwort">
                </div>
                <div class="input-group">
                    <div class="checkbox">
                        <label> <input id="login-remember"
                                       type="checkbox"
                                       name="remember"
                                       value="1"> Logindaten merken!
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button id="btn-login"
                            class="btn btn-success form-control">Anmelden <i id="loginSpinner"
                                                                             class="fa fa-spinner fa-spin hide"></i>
                    </button>
                </div>
                <div class="form-group">
                    <button
                            id="btn-fblogin"
                            class="btn btn-primary form-control">Login mit Facebook!
                    </button>
                </div>
                <div class="form-group">
                    <div class="col-md-12 control">
                        <div
                                style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
                            Du hast keinen Account? <a href="#"
                                                       onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                Melde dich hier an! </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="signupbox"
         style="display: none; margin-top: 50px"
         class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Anmelden</div>
                <div
                        style="float: right; font-size: 85%; position: relative; top: -10px">
                    <a id="signinlink"
                       href="#"
                       onclick="$('#signupbox').hide(); $('#loginbox').show()">Einloggen</a>
                </div>
            </div>
            <div class="panel-body">
                <form id="signupform"
                      class="form-horizontal"
                      role="form">

                    <div id="registerAlert"
                         class="alert alert-danger col-sm-12 hide"></div>

                    <div class="form-group">
                        <label for="email"
                               class="col-md-3 control-label">E-Mail</label>
                        <div class="col-md-9">
                            <input id="registerEmail"
                                   type="text"
                                   class="form-control"
                                   name="email"
                                   placeholder="E-mail Addresse">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="firstname"
                               class="col-md-3 control-label">Vorname</label>
                        <div class="col-md-9">
                            <input id="registerName"
                                   type="text"
                                   class="form-control"
                                   name="firstname"
                                   placeholder="Vorname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password"
                               class="col-md-3 control-label">Passwort</label>
                        <div class="col-md-9">
                            <input id="registerPassword"
                                   type="password"
                                   class="form-control"
                                   name="passwd"
                                   placeholder="Passwort">
                        </div>
                    </div>

                    <div class="form-group">
                        <button id="btn-register"
                                type="button"
                                class="btn btn-info form-control">
                            <i class="icon-hand-right"></i>
                            jetzt registrieren!
                        </button>
                    </div>

                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-signup"
                                    type="button"
                                    class="btn btn-info">
                                <i class="icon-hand-right"></i> &nbsp
                                                                Einloggen
                            </button>
                            <span style="margin-left: 8px;">or</span>
                        </div>
                    </div>

                    <div
                            style="border-top: 1px solid #999; padding-top: 20px"
                            class="form-group">

                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-fbsignup"
                                    type="button"
                                    class="btn btn-primary">
                                <i class="icon-facebook"></i> Mit Facebook Account registrieren
                            </button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% block javascript %}
    <script src="javascript/login.js"></script>
    <script src="javascript/register.js"></script>
{% endblock %}
