<div class="container">
    <input type="hidden" id="animalId" value={{animal.animal}}></input>
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1>Meine Tiere!</h1>
                <p>Muhzeit</p>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Allgemein</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="callingName">Rufname</label> <input
                        type="text" class="form-control"
                        id="callingName" placeholder="Rufname..."
                        value={{animal.name}}>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="genus">Tierart</label> <select
                            class="form-control" id="genus">
                    {% for genusId, genusName in genuses %}
                        <option value={{ genusId }} {% if genusId == animal.genus %}selected="selected"{% endif %}>
                            {{ genusName }}
                        </option>
                    {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="race">Rasse</label> <select
                        class="form-control" id="race">
                        {% for raceId, raceName in races %}
                            <option value={{ raceId }} {% if raceId == animal.race %}selected="selected"{% endif %}>
                                {{ raceName }}
                            </option>
                        {% endfor %}
                        </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label for="birthDay">Geburtsdatum</label>
                    <div class='input-group date'>
                        <input type='text' id='birthDay'
                            class="form-control"
                            placeholder="Geburtsdatum"
                            value={{animal.birthDay}}> <span
                            class="input-group-addon"> <span
                            class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Körpermerkmale</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2 form-group">
                    <label for="sex">Geschlecht</label>
                    <div id="sexGroup" class="btn-group"
                        data-toggle="buttons">
                        {% for sexId, sexCode in sexes %}
                        <label
                            class="btn btn-primary {% if animal.sex == sexId %} active {% endif %}">
                            <input type="radio" id="maleBtn"
                            value={{sexId}}> <i
                            class="fa fa-male"></i>
                        </label>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label for="furColour">Fellfarbe</label> <select
                        class="form-control" id="furColour"
                        style="width: 100%;">
                        {% for colourId, colourName in colours %}
                        <option value={{ colourId }} {% if colourId == animal.furColour %}selected="selected"{% endif %}>
                            {{ colourName }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <label for="eyeColour">Augenfarbe</label> <select
                        class="form-control form-group" id="eyeColour"
                        style="width: 100%;">
                        {% for colourId, colourName in colours %}
                        <option value={{ colourId }} {% if colourId == animal.eyeColour %}selected="selected"{% endif %}>
                            {{ colourName }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label for="weight">Gewicht (kg)</label> <input
                        type="number" class="form-control"
                        id="weight" min="1" max="5"
                        value="{{animal.size}}">
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Weiteres</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12 form-group">
                    <textarea rows="4" id="specification"
                        class="form-control" placeholder="Merkmale..."
                        style="resize: none;">{{animal.specification}}</textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button id="animalOverviewBtn" type="button"
                class="btn btn-primary active">Zur Übersicht</button>
        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-primary"
                id="saveAnimalBtn">Speichern</button>
        </div>
    </div>
    <script src="javascript/editAnimal.js"></script>